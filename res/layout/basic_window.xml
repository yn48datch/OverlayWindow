<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_bg"
    android:padding="4dp" >

    <RelativeLayout
        android:id="@+id/windowbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/windowbar_delete_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_delete" />

        <TextView
            android:id="@+id/windowbar_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <View
        android:id="@+id/windowbar_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/windowbar_layout"
        android:background="@color/window_divider" />

    <FrameLayout
        android:id="@+id/window_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/windowbar_divider">

    </FrameLayout>

</RelativeLayout>